# Development Dockerfile with hot reload
FROM node:18-alpine

WORKDIR /app

# Install development tools
RUN apk add --no-cache git

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Expose ports
EXPOSE 3000 9229

# Start development server
CMD ["npm", "run", "dev"]